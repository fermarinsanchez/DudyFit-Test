<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Pantalla de Configuración</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12 trainers-container">
            {{!-- <ul class="list-group list-group-flush trainer-group d-flex align-items-center"> --}}

                {{#each trainers}}
                <div class="">
                    <p>Entrenador {{this.id}}</p>
                    <form class="form-inline">
                        <div class="form-group pr-2">
                            <label for="inputName" class="text-muted">Nombre</label>
                            <input type="text" id="inputName" class="form-control mx-sm-3"
                                aria-describedby="trainerName" value="{{this.name}}">
                        </div>
                        <div class="form-group">
                            <label for="inputVal" class="text-muted">Valoración</label>
                            <input type="number" min="0" max="5" id="inputVale" class="form-control mx-sm-3"
                                aria-describedby="inputVal" value="{{this.reputation}}">
                        </div>
                        <div class="form-group">
                            <label for="inputMaxCLi" class="text-muted">Máximo número de clientes</label>
                            <input type="number" id="inputMaxCLi" class="form-control mx-sm-3 input-size"
                                aria-describedby="inputMaxCLi" value="{{this.available}}">
                        </div>
                    </form>
                </div>
                <div class="border-bottom"></div>
                {{/each}}

                <div class="ml-auto mt-3">
                    <button class="btn btn-outline-secondary" data-toggle="modal" data-target="#exampleModalCenter">Ver
                        tabla de clientes</button>
                    <a href="/trainers-result" class="btn btn-primary"> Cacular resultados</a>
                </div>
                {{!--
            </ul> --}}

        </div>

    </div>

</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Tabla de Clientes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>#Id</th>
                            <th>Nombre</th>
                            <th>IRE*</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each clients}}
                        <tr>
                            <th scope="row">{{this.id}}
                            <td>{{this.name}}</td>
                            <td>{{this.trainerRep}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <small class="text-muted">*<b>I</b>mportancia de la <b>R</b>eputación del <b>E</b>ntrenador.</small>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>